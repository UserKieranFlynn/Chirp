<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chirp.MainActivity">


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/record_tweet"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="recordTweet"
        android:textColor="#000000"
        android:textSize="36sp"
        app:bootstrapBrand="info"
        app:bootstrapSize="xl"
        app:bootstrapText="@string/record_tweet"
        app:buttonMode="regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundedCorners="true"
        app:showOutline="false" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/go_live"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="goLive"
        android:text="@string/go_live"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/record_tweet"
        app:bootstrapSize="xl"
        app:buttonMode="regular"
        app:bootstrapBrand="info"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/browse_chirp"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="browseChirp"
        android:text="@string/browse_chirp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/go_live"
        app:bootstrapSize="xl"
        app:buttonMode="regular"
        app:bootstrapBrand="info"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/user_tweets"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:onClick="userTweets"
        android:text="@string/user_tweets"
        app:bootstrapSize="xl"
        app:buttonMode="regular"
        app:bootstrapBrand="info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browse_chirp"
        app:roundedCorners="true"
        app:showOutline="false"/>


</androidx.constraintlayout.widget.ConstraintLayout>